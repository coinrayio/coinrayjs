{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": false,
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
